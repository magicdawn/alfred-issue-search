{
  "include": ["src/typings/index.d.ts", "src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "module": "CommonJS",
    "skipLibCheck": true
  }
}
